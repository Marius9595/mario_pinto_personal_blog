---
import Hamburger from './Hamburguer.astro';
import Navigation from './Navigation.astro';
import ThemeIcon from './ThemeIcon.astro';
---
<header>
  <nav>
    <div class = "topnav">
        <Hamburger />
        <ThemeIcon />
    </div>

    <Navigation />

  </nav>
</header>

<style>

    header {
        background-color: var(--color-secondary);
        position: sticky; 
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        padding: 0.5rem 1rem;
    }

    

    .topnav{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        align-content: center;
    }


</style>