<script is:inline>
  document.getElementById("themeToggle").addEventListener("click", () => {
    theme = localStorage.getItem('theme') ?? "light";
    isDark = theme === "dark";

    document.documentElement.classList.remove(theme);
    document.documentElement.classList.add(isDark ? "light" : "dark");
