---
import Hamburger from './Hamburguer.astro';
import Navigation from './Navigation.astro';
import ThemeIcon from './ThemeIcon.astro';
---
<header>
    <nav>
        <Hamburger/>
        <Navigation/>
    </nav>
    <ThemeIcon/>
</header>

<style>

    header {
        display:flex;
        justify-content: space-between;
        background-color: var(--color-primary);
        position: sticky;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        padding: 0.5rem 1rem;
    }


    @media screen and (min-width: 636px) {
        header {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }
    }


</style>