---
//TODO (NO-URGENTE): Debe ser un React Component para testear el estado de la navegaci√≥n

import Logo from "./Logo.astro";

const paths = [
  //{path: '/about/', name: 'About'}, //TODO (URGENTE): Agregar About Page
  {path: '/blog/', name: 'Blog'},
];
---

<div class="nav-links">

    <Logo/>
    <a href={"/"}>Inicio</a>

  {
    paths.map((path) => {
      return <a href={path.path} >{path.name}</a>
    })
  }
</div>

<style>
    .nav-links {
        display: none;
        background-color: var(--color-bg);

        a {
            display: block;
            text-align: center;
            padding: 10px 0;
            text-decoration: none;
            font-size: var(--font-size-md);
            font-weight: bold;
            text-transform: uppercase;
            color: var(--color-in-primary);
        }
    }

    .expanded {
        display: unset;
    }

    .isInPage {
        font-weight: bold;
        text-decoration: underline var(--color-secondary)!important;
        text-decoration-thickness: 5px !important;
        cursor: not-allowed;
        pointer-events: none;
    }

    .nav-links a:hover,
    .nav-links a:focus {
        text-decoration: underline var(--color-secondary);
        transition: text-decoration var(--transition-time);
    }

    @media screen and (min-width: 400px) {
        .nav-links {
            display: flex;
            flex-direction: row;
            margin-left: 5em;
            position: static;
            width: auto;
            background: none;
            gap: 1em;
        }

        .nav-links a {
            display: inline-block;
        }
    }
</style>
